---
import SmoothScroll from "../components/SmoothScroll.astro";
import "app/globals.css";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Web Development - Andres Lossada - Fullstack"
    />
    <meta name="viewport" content="width=device-width" />
    <!-- TODO: add favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="wrapper">
    <!-- <div id="blob"></div>
    <div id="blur"></div> -->
    <main class="inner-wrapper">
      <slot />
    </main>
  </body>
  <style is:global>
    :root {
      /* Dark One Pro Darker Colors */
      --chalky: #e5c07b;
      --coral: #ef596f;
      --dark: #5c6370;
      --error: #f44747;
      --fountainBlue: #2bbac5;
      --green: #89ca78;
      --white: #ffffff;
      --LightDark: #7f848e;
      --lightWhite: #abb2bf;
      --malibu: #61afef;
      --purple: #d55fde;
      --whiskey: #d19a66;
      --deepRed: #be5046;
      --bg-color: #24262e;
      /* --bg-color: #1e2235; */
      /* --bg-color: #0a0d1d; */
      /* --bg-color: #000000; */
    }
    /* --letter-a: #f92672;
    --letter-n: #a6e22e;
    --letter-d: #66d9ef;
    --letter-r: #fd971f;
     --letter-e: #ae81ff; 
    --letter-e: #d6d6d6;
    --letter-s: #e1d74d; 
    --gray: #5e5e5e; 
      --gray: rgb(227, 227, 227);
      --color-1: #ff6188;
      --color-2: #e87d3e;
      --color-3: #ffd866;
      --color-4: #a9dc76;
      --color-5: #ab9df2;
      --color-6: #78dce8;
      */
    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    * {
      margin: 0;
      padding: 0;
      font: inherit;
    }

    html {
      font-family: system-ui;
      /* -webkit-overflow-scrolling: auto; */
    }

    body {
      position: relative;
      /* overflow: hidden;  */
      overflow-x: hidden;
      /* width: 100vw; */
      /* height: 100%; */

      --sb-track-color: rgba(45, 65, 74, 0.1);
      --sb-thumb-color: #334651;
      /* --sb-size: 10px; */
      /* scrollbar-color: var(--sb-thumb-color) var(--sb-track-color); */
    }
    body::-webkit-scrollbar {
      /* width: var(--sb-size); */
    }

    body::-webkit-scrollbar-track {
      background: var(--sb-track-color);
      /* border-radius: 10px; */
    }

    body::-webkit-scrollbar-thumb {
      background: var(--sb-thumb-color);
      /* border-radius: 10px; */
    }

    .top {
      clip-path: polygon(
        0 0,
        100% 0,
        100% calc(100% - 77px),
        50% 100%,
        0 calc(100% - 77px)
      );
    }

    .bottom {
      clip-path: polygon(0 0, 50% 77px, 100% 0, 100% 100%, 0 100%);
    }

    .middle {
      clip-path: polygon(
        0 0,
        50% 77px,
        100% 0,
        100% calc(100% - 77px),
        50% 100%,
        0 calc(100% - 77px)
      );
    }
    .wrapper {
      width: 100%;
      height: 100vh;
      overflow-y: auto;
      overflow-x: hidden;
      perspective: 10px;
    }
    .inner-wrapper {
      position: relative;
      /* display: flex; */
      /* justify-content: center; */
      /* align-items: center; */
      height: 100%;
      transform-style: preserve-3d;
      z-index: -1;
      filter: drop-shadow(0px 16px 18px rgba(0, 0, 0, 0.51));
    }

    body {
      background-image: url("/bg-code.webp");
      background-size: contain;
      /* transform: translateZ(-10px) scale(2); */
    }
  </style>
</html>
<SmoothScroll />
