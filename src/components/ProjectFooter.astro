---
import JSIcon from "@/assets/icons/JSIcon.astro";
import HTMLIcon from "@/assets/icons/HTMLIcon.astro";
import CSSIcon from "@/assets/icons/CSSIcon.astro";
import GitHubIcon from "@/assets/icons/GitHubIcon.astro";
import LinkIcon from "@/assets/icons/LinkIcon.astro";
import ReactIcon from "@/assets/icons/ReactIcon.astro";

const { project } = Astro.props;
---

<footer
  class="flex justify-between absolute bottom-1 h-[37px] w-full px-5 mb-2"
>
  <section class="flex gap-3 drop-shadow-xl mt-auto z-10">
    <a
      href={project.github}
      target="_blank"
      class="h-[28px] w-[28px] md:h-[37px] md:w-[37px] hover:scale-110 hover:drop-shadow-lg duration-200"
      aria-label=`github ${project.title}`
    >
      <GitHubIcon />
    </a>
    <a
      href={project.link}
      target="_blank"
      class="h-[28px] w-[28px] md:h-[37px] md:w-[37px] hover:scale-110 hover:drop-shadow-lg duration-200"
      aria-label=`demo ${project.title}`
    >
      <LinkIcon />
    </a>
  </section>
  <section class="flex gap-1 items-end z-10">
    <HTMLIcon />
    <CSSIcon />
    <JSIcon />
    {project.tech.includes("React") && <ReactIcon />}
  </section>
</footer>
