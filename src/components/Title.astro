---
const { text } = Astro.props;
---

<div class="title">
  <h1 class="">{text}</h1>
</div>

<style>
  .title {
    /* background: #000; */
    /* line-height: 1; */
    /* min-height: 100%; */
    /* margin: 90px; */
    /* padding: 80px; */
    /* padding-: 100px; */
    /* padding-bottom: 100px; */
    display: grid;
    place-items: start center;
    /* min-height: calc(100vh - 16px); */
  }

  h1 {
    font-family: "Exo", sans-serif;
    font-size: 70px;
    font-weight: 900;
    text-shadow: rgba(255, 255, 255, 0.178) 0px 0px 20px;
    /* width: -webkit-min-content; */
    /* width: -moz-min-content; */
    /* width: min-content; */
    /* margin: auto; */
    /* text-transform: lowercase; */
    background: linear-gradient(
      40deg,
      var(--color-1) 19%,
      transparent 19%,
      transparent 20%,
      var(--color-2) 20%,
      var(--color-2) 39%,
      transparent 39%,
      transparent 40%,
      var(--color-3) 40%,
      var(--color-3) 59%,
      transparent 59%,
      transparent 60%,
      var(--color-4) 60%,
      var(--color-4) 79%,
      transparent 79%,
      transparent 80%,
      var(--color-5) 80%
    );
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }
</style>

