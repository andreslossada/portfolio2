---
import "highlight.js/styles/atom-one-dark.css";
import { code2 } from "../utils/react-code";
---

<div class="w-full fixed top-[-50px] h-screen -z-50">
  <pre
    class="">
  <code class=`text-wrap h-[100vh+60px]  break-all code  duration-100`>
    {code2.repeat(3)}
  </code>
</pre>
</div>

<style>
  .hljs {
    display: block;
    margin: 0;
    padding: 0;
  }
</style>

<script>
  import hljs from "highlight.js/lib/core";
  import javascript from "highlight.js/lib/languages/javascript";
  hljs.registerLanguage("javascript", javascript);
  hljs.highlightAll();
</script>
