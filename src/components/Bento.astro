---
import { Image } from "astro:assets";
import OmnifoodIcon from "./icons/omnifood-logo.png";
import CrwnIcon from "./icons/CrwnIcon.astro";
import ForkifyIcon from "./icons/forkify-icon.png";
import PathFinderIcon from "./icons/PathIcon.astro";
import Title from "./Title.astro";
import ProjectFooter from "./ProjectFooter.astro";

const projects = {
  omnifood: {
    title: "Omnifood",
    description:
      "Elevate your health journey with a captivating landing page design for a fictional healthy delivery service – where wellness meets seamless online experience.",
    tech: ["HTML", "CSS", "JS"],
    link: "https://andres-omnifood.netlify.app/",
    github: "https://github.com/dresan22/omnifood-lp",
    image: OmnifoodIcon,
  },
  crwn: {
    title: "Crwn",
    description:
      "Dynamic E-commerce Platform: Elevating Fashion Trends Online – A sleek and intuitive shopping website offering a curated collection of modern, trend-setting clothing for a seamless and stylish online shopping experience",
    tech: ["HTML", "CSS", "JS"],
    link: "https://crwn-clothing-dresan22.vercel.app",
    github: "https://github.com/dresan22/crwn-clothing",
    image: CrwnIcon,
  },
  pathfinder: {
    title: "Path Finder",
    description:
      "AI-powered Career Navigator: A cutting-edge web platform that leverages artificial intelligence to analyze individual skills, preferences, and market trends, guiding users towards personalized and fulfilling career paths.",
    tech: ["HTML", "CSS", "JS"],
    link: "https://findmypath.vercel.app",
    github: "https://github.com/dresan22/PathFinder",
    image: PathFinderIcon,
  },
  forkify: {
    title: "Forkify",
    description:
      "Engaging React-powered project for a interactive recipe platform, featuring seamless navigation, and a modern UI for an enhanced culinary experience.",
    tech: ["HTML", "CSS", "JS", "React"],
    link: "https://forkify-andres.netlify.app/",
    github: "https://github.com/dresan22/forkify-andres",
    image: ForkifyIcon,
  },
};
---

<div
  class="bg-[--bg-color-1] py-40 middle bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.25),rgba(255,255,255,0))] relative"
>
  <div
    class="absolute -z-20 inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:44px_44px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]"
  >
  </div>
  <Title text="Projects" />
  <section
    class="w-full max-w-[70vw]
    grid lg:grid-cols-10 auto-rows-[35vh] gap-5
    mx-auto pt-20 pb-40 text-white h-full place-content-center text-sm xl:text-lg [&>article]:grid [&>article]:grid-cols-1 [&>article]:place-content-center [&>article]:rounded-xl [&>article]:backdrop-blur-md [&>article]:p-5 [&>article]:gap-3 [&>article]:duration-100 [&>article]:overflow-hidden [&>article>p]:text-sm [&>article>p]:md:text-[18px] [&>article>p]:leading-5 [&>article>p]:font-normal"
  >
    <!-- OMNIFOOD ----------------------------------------------->
    <article
      class="md:col-span-4 bg-gradient-to-r from-orange-200 via-amber-100 to-slate-100 text-[#e67e22] hover:shadow-[0px_0px_15px_#f59e0b]"
    >
      <Image src={projects.omnifood.image} alt="Omnifood logo" class="" />
      <p class="font-['Rubik system-ui'] text-[#333] text-pretty">
        {projects.omnifood.description}
      </p>
      <ProjectFooter project={projects.omnifood} />
    </article>
    <!-- CRWN -------------------------------------------------->
    <article
      class="bg-gradient-to-b from-gray-100 via-gray-500 to-gray-800 md:col-span-6 text-right text-white hover:shadow-[0px_0px_15px_gray]"
    >
      <div class="h-full absolute w-full -z-10 -left-24 -top-6">
        <projects.crwn.image />
      </div>
      <div>
        <h2 class="text-3xl md:text-6xl drop-shadow-lg">Crwn</h2>
        <p class="font-['Rubik system-ui']">
          {projects.crwn.description}
        </p>
      </div>
      <ProjectFooter project={projects.crwn} />
    </article>
    <!-- FINDER -------------------------------------------------->
    <article
      class=`	      bg-slate-800   md:col-span-6 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-indigo-900 via-indigo-900 to-teal-900      hover:shadow-[0px_0px_15px_gray]`
    >
      <div
        class="size-[150px] lg:size-[400px] absolute -z-10 left-24 -top-6 rotate-90 opacity-40"
      >
        <projects.pathfinder.image />
      </div>
      <div class="">
        <h2
          class="bg-gradient-to-r from-blue-300 to-purple-300 bg-clip-text font-extrabold text-transparent tracking-wide text-3xl md:text-5xl drop-shadow-dark drop-shadow-lg"
        >
          Path Finder
        </h2>
        <p class="font-['Rubik system-ui']">
          {projects.pathfinder.description}
        </p>
      </div>
      <ProjectFooter project={projects.pathfinder} />
    </article>
    <!-- FORK -------------------------------------------------->
    <article
      class=`	      bg-slate-800   md:col-span-4 bg-gradient-to-l from-orange-200 via-yellow-200 to-amber-100    text-[#333]  hover:shadow-[0px_0px_15px_#f59e0b]`
    >
      <Image
        src={projects.forkify.image}
        alt="Omnifood logo"
        class="drop-shadow-xl w-[60%] lg:w-[80%] mx-auto"
      />
      <p class="font-['system-ui'] text-right">
        {projects.forkify.description}
      </p>
      <ProjectFooter project={projects.forkify} />
    </article>
  </section>
</div>
