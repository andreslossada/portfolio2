<section class="h-screen content-center bg-black">
  <div
    class="scroller bg-white overflow-hidden flex align-middle"
    data-direction="right"
    data-speed="slow"
  >
    <div class="scroller__inner bg-gray-500" id="scroller-inner">
      <!-- Cells will be inserted here by JavaScript -->
    </div>
  </div>
</section>

<style>
  .scroller__inner {
    display: flex;
    gap: 1rem;
    height: 40px;
    align-items: center;
    animation: scroll 10s linear infinite;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-50% - 0.5rem));
    }
  }
</style>

<script>
  // Function to create a single cell
  const createCell = () => {
    const cell = document.createElement("div");
    cell.classList.add("cell", "h-3", "rounded-full");
    cell.style.width = `${Math.random() * 300 + 20}px`;
    cell.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
    return cell;
  };

  // Create the initial array of cells
  const cellsArray = Array.from({ length: 15 }, createCell);

  // Get the scroller inner element
  const scrollerInner = document.getElementById("scroller-inner");

  // Function to append cells array multiple times
  const appendCells = (times) => {
    for (let i = 0; i < times; i++) {
      cellsArray.forEach((cell) => {
        scrollerInner.appendChild(cell.cloneNode(true));
      });
    }
  };

  // Append cells array 3 times
  appendCells(4);
</script>
